<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Best calculadora (presiona C)"
            android:textSize="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:onClick="uno"
                        android:text="1"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="dos"
                        android:text="2"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="tres"
                        android:text="3"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/buttonsum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="suma"
                        android:text="+"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:onClick="cuatro"
                        android:text="4"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="cinco"
                        android:text="5"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="seis"
                        android:text="6"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/buttonres"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="resta"
                        android:text="-"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:onClick="siete"
                        android:text="7"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="ocho"
                        android:text="8"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="nueve"
                        android:text="9"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/buttonmul"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="multiplicacion"
                        android:text="x"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buttonlimpiar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:onClick="borrar"
                        android:text="c"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/button0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="cero"
                        android:text="0"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/buttonigual"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="igual"
                        android:text="="
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/buttondiv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:onClick="division"
                        android:text="/"
                        android:textColor="#FDFDFD"
                        android:textSize="40dp"
                        android:textStyle="bold|italic" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shibafer" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>